{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./dist",
    "paths": {
      "@aptx/frontend-tk-binding": ["./node_modules/@aptx/frontend-tk-binding"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
